<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/raised</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="Switch">
        <item name="colorAccent">@color/raised</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
